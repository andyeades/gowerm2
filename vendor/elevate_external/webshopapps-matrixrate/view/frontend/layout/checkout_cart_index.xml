<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>


        <referenceContainer name="checkout.cart.widget">
            <block class="Magento\Framework\View\Element\Template" name="webshopapps_matrixrate_cart_shipping_rates" before="cart.discount" template="WebShopApps_MatrixRate::cart/shipping_rates.phtml" />
        </referenceContainer>

        <referenceBlock name="checkout.cart.shipping">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="summary-block-config" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="shipping-rates-validation" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="matrixrate-rates-validation" xsi:type="array">
                                            <item name="component" xsi:type="string">WebShopApps_MatrixRate/js/view/shipping-rates-validation</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
