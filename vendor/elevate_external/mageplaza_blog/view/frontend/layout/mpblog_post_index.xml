<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="mpblog_design"/>
    <body>
        <referenceContainer name="page.wrapper">
            <container name="blog-top" htmlTag="div" htmlClass="blog-top-content" before="page-main-outer">
                <block class="Mageplaza\Blog\Block\Post\Listpost" name="mpblog.post.list.top" as="mpblog_post_top" template="post/home-top.phtml" after="mblog.post.list"/>
            </container>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Mageplaza\Blog\Block\Post\Listpost" name="mpblog.post.list" as="mpblog_post" template="post/home.phtml"/>

            <block class="Magento\Framework\View\Element\Template" name="mpblog.copy.right" after="-" template="Mageplaza_Blog::html/copyright.phtml"/>
        </referenceContainer>
        <referenceContainer name="columns">

        <container name="bottom-blog" htmlTag="div" htmlClass="blog-bottom-content" after="single-sidebar">
            <block class="Mageplaza\Blog\Block\Post\Listpost" name="mpblog.post.list.bottom" as="mpblog_post_bottom" template="post/home-bottom.phtml" after="mblog.post.list"/>
        </container>
        </referenceContainer>
        <referenceBlock name="page.main.title" remove="true" />
    </body>
</page>

