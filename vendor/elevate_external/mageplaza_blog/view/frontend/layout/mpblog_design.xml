<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-right" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/styles-blog.css"/>
        <css src="css/styles-product-gridlist.css"/>
        <css src="css/styles-product-shared.css"/>
        <css src="Mageplaza_Core::css/grid-mageplaza.css"/>
    </head>
    <body>
        <block class="Magento\Theme\Block\Html\Breadcrumbs" name="breadcrumbs_other" as="breadcrumbs_other" template="Magento_Theme::html/breadcrumbs.phtml"/>

        <referenceBlock name="breadcrumbs" remove="false"/>

        <attribute name="class" value="evblog"/>
        <referenceContainer name="columns">
            <container name="single-sidebar" label="single-sidebar" htmlTag="div" htmlClass="single-sidebar">
                <container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar sidebar-main" after="main">
                    <container name="blog.sidebar.main" as="ev_blog_sidebar_main" label="Sidebar Main">
                        <block class="Mageplaza\Blog\Block\Sidebar\Search" name="mpblog.sidebar.search" template="sidebar/search.phtml" />
                        <block class="Mageplaza\Blog\Block\Sidebar\MostView" name="mpblog.sidebar.mostview" template="sidebar/mostview.phtml"/>
                        <block class="Mageplaza\Blog\Block\Category\Widget" name="mpblog.sidebar.category" template="category/widget.phtml"/>

                        <block class="Mageplaza\Blog\Block\Topic\Widget" name="mpblog.sidebar.topic" template="topic/widget.phtml"/>

                    </container>
                </container>
                <container name="div.sidebar.additional" htmlTag="div" htmlClass="sidebar sidebar-additional" after="div.sidebar.main">
                    <container name="sidebar.additional" as="sidebar_additional" label="Sidebar Additional"/>
                </container>
            </container>
        </referenceContainer>
        <referenceBlock name="head.additional">
            <block class="Mageplaza\Blog\Block\Design" name="mpblog.design" template="Mageplaza_Blog::design.phtml"/>
        </referenceBlock>
    </body>
</page>
