<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <firebear_configurableproducts>
            <general>
                <change_name>1</change_name>
                <icp_use_canonical_url>0</icp_use_canonical_url>
                <allow_deselect_swatch>1</allow_deselect_swatch>
                <hide_price>0</hide_price>
                <price_text>Please Login or Register to buy this product!</price_text>
                <name_id_class>.page-title .base</name_id_class>
                <change_breadcrumbs>1</change_breadcrumbs>
                <breadcrumbs_id_class>.breadcrumbs .items .product</breadcrumbs_id_class>
                <change_sku>1</change_sku>
                <sku_id_class>.product-info-stock-sku .value</sku_id_class>
                <change_short_description>1</change_short_description>
                <short_description_id_class>.product.attribute.overview .value</short_description_id_class>
                <change_description>1</change_description>
                <description_id_class>.product.attribute.description .value</description_id_class>
                <change_tier_prices>0</change_tier_prices>
                <tier_prices_id_class>.product-info-main .prices-tier</tier_prices_id_class>
                <change_attributes_block>0</change_attributes_block>
                <attributes_block_class>.additional-attributes-wrapper</attributes_block_class>
                <use_custom_options_for_variations>1</use_custom_options_for_variations>
            </general>
            <matrix>
                <x_axis>color</x_axis>
                <y_axis>size</y_axis>
            </matrix>
            <bundle_options>
                <use_custom_options_for_variations_in_bundle>0</use_custom_options_for_variations_in_bundle>
            </bundle_options>
        </firebear_configurableproducts>
    </default>
</config>