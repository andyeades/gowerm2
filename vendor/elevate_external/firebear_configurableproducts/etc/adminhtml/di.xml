<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\ConfigurableProduct\Block\Adminhtml\Product\Edit\Tab\Variations\Config\Matrix">
        <plugin name="firebear_product_variations_matrix"
                type="Firebear\ConfigurableProducts\Plugin\Block\Adminhtml\Product\Edit\Tab\Variations\Config\Matrix"/>
    </type>
    <type name="Magento\Catalog\Controller\Adminhtml\Product\Initialization\Helper">
        <plugin name="firebear_product_update_default"
                type="Firebear\ConfigurableProducts\Plugin\Controller\Adminhtml\Product\Initialization\Helper\Plugin\UpdateDefault"
                sortOrder="60"/>
    </type>
    <type name="Magento\ConfigurableProduct\Ui\DataProvider\Product\Form\Modifier\ConfigurablePanel">
        <plugin name="modifyPanel"
                type="Firebear\ConfigurableProducts\Plugin\Ui\DataProvider\Product\Form\Modifier\ConfigurablePanel"/>
    </type>
    <type name="Magento\ConfigurableProduct\Ui\DataProvider\Product\Form\Modifier\Data\AssociatedProducts">
        <plugin name="modifyMatrix"
                type="Firebear\ConfigurableProducts\Plugin\Ui\DataProvider\Product\Form\Modifier\Data\AssociatedProducts"/>
    </type>
    <type name="Magento\Bundle\Block\Adminhtml\Sales\Order\View\Items\Renderer">
        <plugin name="modifySalesOrder"
                type="Firebear\ConfigurableProducts\Plugin\Block\Adminhtml\Sales\Order\View\Items\Renderer"/>
    </type>
    <virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="custom-attribute" xsi:type="array">
                    <item name="class" xsi:type="string">
                        Firebear\ConfigurableProducts\Ui\DataProvider\Form\Modifier\ProductCustomAttributes
                    </item>
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Bundle\Ui\DataProvider\Product\BundleDataProvider">
        <plugin name="addConfigProductsToBundle"
                type="Firebear\ConfigurableProducts\Plugin\Ui\DataProvider\Product\BundleDataProvider"/>
    </type>
    <type name="Magento\Bundle\Model\LinkManagement">
        <plugin name="addConfigProductsToBundleSave"
                type="Firebear\ConfigurableProducts\Plugin\Model\Bundle\LinkManagement"/>
    </type>
    <type name="Magento\Catalog\Ui\DataProvider\Product\ProductDataProvider">
        <arguments>
            <argument name="addFieldStrategies" xsi:type="array">
                <item name="x_axis" xsi:type="object">
                    Firebear\ConfigurableProducts\Ui\DataProvider\Product\AddMatrixAxises
                </item>
            </argument>
        </arguments>
    </type>

    <!-- Bundle Product Declaration -->
    <preference for="Magento\Bundle\Model\ResourceModel\Selection"
                type="Firebear\ConfigurableProducts\Model\Bundle\ResourceModel\Selection"/>
    <preference for="Magento\Bundle\Model\Product\Type" type="Firebear\ConfigurableProducts\Model\Bundle\Model\Type"/>
    <preference for="Magento\Bundle\Model\ResourceModel\Option\Collection"
                type="Firebear\ConfigurableProducts\Model\Bundle\ResourceModel\Option\Collection"/>
    <preference for="Magento\Bundle\Api\ProductLinkManagementInterface"
                type="Firebear\ConfigurableProducts\Model\Bundle\LinkManagement"/>
    <preference for="Magento\Bundle\Ui\DataProvider\Product\Form\Modifier\BundlePanel"
                type="Firebear\ConfigurableProducts\Ui\DataProvider\Product\Form\Modifier\BundlePanel"/>
    <preference for="Magento\Bundle\Ui\DataProvider\Product\Form\Modifier\Composite"
                type="Firebear\ConfigurableProducts\Ui\DataProvider\Product\Form\Modifier\Composite"/>
</config>
