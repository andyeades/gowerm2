<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote" resource="checkout" comment="Sales Flat Quote">
        <column xsi:type="varchar" name="detailed_delivery_info" length="512" comment="Detailed Delivery Info"/>
        <column xsi:type="varchar" name="detailed_delivery_info_dates" length="512" comment="Detailed Delivery Info Dates"/>
        <column xsi:type="smallint" name="detailed_delivery_teamnumber" padding="2" unsigned="false" nullable="true" identity="false"
                comment="Detailed Delivery Team Number"/>
    </table>

    <table name="sales_order" resource="sales" comment="Sales Flat Order">
        <column xsi:type="varchar" name="detailed_delivery_info" length="512" comment="Detailed Delivery Info"/>
        <column xsi:type="varchar" name="detailed_delivery_info_dates" length="512" comment="Detailed Delivery Info Dates"/>
        <column xsi:type="smallint" name="detailed_delivery_teamnumber" padding="2" unsigned="false" nullable="true" identity="false"
                comment="Detailed Delivery Team Number"/>
    </table>

    <table name="quote_address" resource="checkout" comment="Sales Flat Quote Address">
        <column xsi:type="varchar" name="detailed_delivery_info" length="512" comment="Detailed Delivery Info"/>
        <column xsi:type="varchar" name="detailed_delivery_info_dates" length="512" comment="Detailed Delivery Info Dates"/>
        <column xsi:type="smallint" name="detailed_delivery_teamnumber" padding="2" unsigned="false" nullable="true" identity="false"
                comment="Detailed Delivery Team Number"/>
        <column xsi:type="varchar" name="detailed_delivery_start_time" length="512" comment="Detailed Delivery Start Time"/>
        <column xsi:type="varchar" name="detailed_delivery_end_time" length="512" comment="Detailed Delivery End Time"/>
        <column xsi:type="varchar" name="detailed_delivery_before_time" length="512" comment="Detailed Delivery Before Time"/>
    </table>

    <table name="sales_order_address" resource="sales" engine="innodb" comment="Sales Flat Order Address">
        <column xsi:type="varchar" name="detailed_delivery_info" length="512" comment="Detailed Delivery Info"/>
        <column xsi:type="varchar" name="detailed_delivery_info_dates" length="512" comment="Detailed Delivery Info Dates"/>
        <column xsi:type="smallint" name="detailed_delivery_teamnumber" padding="2" unsigned="false" nullable="true"
                identity="false"
                comment="Detailed Delivery Team Number"/>
        <column xsi:type="varchar" name="detailed_delivery_start_time" length="512" comment="Detailed Delivery Start Time"/>
        <column xsi:type="varchar" name="detailed_delivery_end_time" length="512" comment="Detailed Delivery End Time"/>
        <column xsi:type="varchar" name="detailed_delivery_before_time" length="512" comment="Detailed Delivery Before Time"/>
    </table>




</schema>
