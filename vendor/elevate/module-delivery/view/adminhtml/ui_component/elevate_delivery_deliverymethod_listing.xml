<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">elevate_delivery_deliverymethod_listing.elevate_delivery_deliverymethod_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>elevate_delivery_deliverymethod_columns</spinner>
		<deps>
			<dep>elevate_delivery_deliverymethod_listing.elevate_delivery_deliverymethod_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add Delivery Method</label>
			</button>
		</buttons>
	</settings>
	<dataSource component="Magento_Ui/js/grid/provider" name="elevate_delivery_deliverymethod_listing_data_source">
		<settings>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Elevate_Delivery::DeliveryMethod</aclResource>
		<dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="elevate_delivery_deliverymethod_listing_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>deliverymethod_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="elevate_delivery_deliverymethod_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">elevate_delivery_deliverymethod_listing.elevate_delivery_deliverymethod_listing.elevate_delivery_deliverymethod_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">deliverymethod_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" path="elevate_delivery/DeliveryMethod/inlineEdit" xsi:type="url"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">elevate_delivery_deliverymethod_listing.elevate_delivery_deliverymethod_listing.elevate_delivery_deliverymethod_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>deliverymethod_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="deliverymethod_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">Id</label>
			</settings>
		</column>
        <column name="deliveryarea_id">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Delivery Area</label>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="internal_name">
        <settings>
            <filter>text</filter>
            <sorting>asc</sorting>
            <label translate="true">Internal Name</label>
        </settings>
    </column>
        <column name="day1">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Day 1</label>
            </settings>
        </column>
        <column name="day2">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Day 2</label>
            </settings>
        </column>
        <column name="day3">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Day 3</label>
            </settings>
        </column>
        <column name="day4">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Day 4</label>
            </settings>
        </column>
        <column name="day5">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Day 5</label>
            </settings>
        </column>
        <column name="day6">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Day 6</label>
            </settings>
        </column>
        <column name="day7">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="label" xsi:type="string" translate="true">Day 7</item>
                </item>
            </argument>
        </column>
        <column name="enabled">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="label" xsi:type="string" translate="true">Enabled</item>
                </item>
            </argument>
        </column>
        <column name="start_time" class="Magento\Ui\Component\Listing\Columns\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">Start Time</item>
                    <item name="dateFormat" xsi:type="string">hh:mm A</item>
                </item>
                <item name="options" xsi:type="array">
                    <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                    <item name="timeOnly" xsi:type="boolean">true</item>
                </item>

            </argument>
            <settings>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="end_time" class="Magento\Ui\Component\Listing\Columns\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">End Time</item>
                    <item name="dateFormat" xsi:type="string">h:mm:ss a</item>
                </item>
                <item name="options" xsi:type="array">
                    <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                    <item name="showsTime" xsi:type="boolean">true</item>
                    <item name="timeOnly" xsi:type="boolean">true</item>
                </item>


            </argument>
            <settings>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="before_time" class="Elevate\Delivery\Ui\Component\Listing\Column\Time">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Elevate_Delivery/js/grid/columns/time</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">Before Time</item>
                </item>

                <item name="options" xsi:type="array">
                    <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                    <item name="showsTime" xsi:type="boolean">true</item>
                    <item name="timeOnly" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="deliveryteamnumber">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Delivery Team Number</label>
            </settings>
        </column>
        <column name="deliveryteamability">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Team Ability</label>
            </settings>
        </column>
        <column name="delivery_desc">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Non Checkout Description</label>
            </settings>
        </column>
        <column name="delivery_desc_checkout">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Checkout Description</label>
            </settings>
        </column>
        <column name="workingdays_min">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Working Days Minimum</label>
            </settings>
        </column>
        <column name="workingdays_max">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">Working Days Max</label>
            </settings>
        </column>
        <column name="call_day_before">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="label" xsi:type="string" translate="true">Call Day Before</item>
                </item>
            </argument>
        </column>
        <column name="date_range_selection">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="label" xsi:type="string" translate="true">Date Range</item>
                </item>
            </argument>
        </column>
        <actionsColumn class="Elevate\Delivery\Ui\Component\Listing\Column\DeliveryMethodActions" name="actions">
			<settings>
				<indexField>deliverymethod_id</indexField>
				<resizeEnabled>false</resizeEnabled>
				<resizeDefaultWidth>107</resizeDefaultWidth>
			</settings>
		</actionsColumn>
	</columns>
</listing>
