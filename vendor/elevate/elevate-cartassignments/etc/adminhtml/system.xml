<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="elevate" translate="label" sortOrder="850">
            <label>Elevate</label>
        </tab>
        <section id="elevate_cartassignments" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Elevate Cart Assignments</label>
            <tab>elevate</tab>
            <resource>Elevate_CartAssignments::assignments</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>

                <field id="donations_enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Donations Block on Cart</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="price_type" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Price Type</label>
                    <source_model>Elevate\AddToCart\Model\Config\Source\PriceType</source_model>
                </field>


            </group>
            <group id="layout" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Layout</label>

                <field id="productname_position" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Product Name Position</label>
                    <source_model>Elevate\CartAssignments\Model\Config\Source\ProductNamePosition</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
