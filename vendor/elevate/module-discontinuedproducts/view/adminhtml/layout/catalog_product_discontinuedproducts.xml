<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root" label="Root">
        <block class="Elevate\Discontinuedproducts\Block\Adminhtml\Catalog\Product\Edit\Tab\Discontinuedproducts"
               name="catalog.product.edit.tab.discontinuedproducts"/>
        <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="discontinuedproducts_grid_serializer">
            <arguments>
                <argument name="input_names" xsi:type="string">position</argument>
                <argument name="grid_block" xsi:type="string">catalog.product.edit.tab.discontinuedproducts</argument>
                <argument name="callback" xsi:type="string">getSelectedDiscontinuedproductsProducts</argument>
                <argument name="input_element_name" xsi:type="string">links[discontinuedproducts]</argument>
                <argument name="reload_param_name" xsi:type="string">products_discontinuedproducts</argument>
            </arguments>
        </block>
    </container>
</layout>
