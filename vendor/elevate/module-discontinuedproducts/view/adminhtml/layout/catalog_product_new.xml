<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product_tabs">
            <block class="Elevate\Discontinuedproducts\Block\Adminhtml\Catalog\Product\Edit\Tab" name="product.discontinuedproducts">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Custom Type</argument>
                    <argument name="url" xsi:type="url" path="catalog/product/discontinuedproducts">
                        <param name="_current">1</param>
                    </argument>
                    <argument name="class" xsi:type="string">ajax</argument>
                    <argument name="group_code" xsi:type="string">advanced</argument>
                </arguments>
            </block>
            <action method="addTab">
                <argument name="name" xsi:type="string">product-discontinuedproducts</argument>
                <argument name="block" xsi:type="string">product.discontinuedproducts</argument>
            </action>
        </referenceBlock>
    </body>
</page>
