<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="elevate" translate="label" sortOrder="100">
            <label>Elevate Extensions</label>
        </tab>
        <section id="elevate_cookienotice" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Cookie Notice</label>
            <tab>elevate</tab>
            <resource>Elevate_CookieNotice::elevate_cookienotice</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="databg" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Background Color</label>
                <validate>color {required:false, hash:true}</validate>
            </field>
                <field id="datafg" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Text Color</label>
                    <validate>color {required:false, hash:true}</validate>
                </field>
                <field id="display_text" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Display Text</label>
                    <comment>This text will display on the frontend.</comment>
                </field>
				<field id="close_text" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Close Text</label>
                </field>
				<field id="divlinkbg" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Div Link Background Colour</label>
					<validate>color {required:false, hash:true}</validate>
                </field>
				<field id="divlinktextcolour" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Div Link Text Colour</label>
					<validate>color {required:false, hash:true}</validate>
                </field>
				<field id="moreinfolink" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>More Info Link</label>
                </field>
            </group>
        </section>
    </system>
</config>
