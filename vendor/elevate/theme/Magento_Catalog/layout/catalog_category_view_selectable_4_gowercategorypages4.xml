<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <link src="css/styles-product-shared.css"/>
        <link src="css/styles-product-gridlist.css"/>
    </head>
    <body>
        <referenceContainer name="page-main-outer-inner">
            <container name="category-header-outer" htmlClass="category-header-outer" htmlTag="header" before="-">
                <container name="category-header-inner" htmlClass="category-header-inner" htmlTag="header">

                </container>
            </container>
        </referenceContainer>

        <move element="category.image" destination="ev.fwt.bm" />
        <move element="category.cms" destination="ev.fwt.bm" />

        <move element="category.description" destination="category-header-inner" after="page.main.title" />
        <move element="columns.top" destination="page-main-outer-inner" before="-" />
        <move element="page.main.title" destination="category-header-inner"/>
        <referenceBlock name="breadcrumbs" remove="true"/>
    </body>
</page>
