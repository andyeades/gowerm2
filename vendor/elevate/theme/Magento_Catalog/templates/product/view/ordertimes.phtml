    if (floor($leadtime / 5) == 0) {
        $maxValueInDaysValue = floor($leadtime % 5) . ' Working Days';
    } else {
        $maxValueInDaysValue = (floor($leadtime / 5)+1) . ' Weeks ';
    }
}

