<?xml version="1.0" ?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="base"/>
    <container name="ev-fullwidth-container" htmlTag="div" htmlId="evfullwidthcontainer" htmlClass="nomargin-contenttop">

    </container>
    <referenceContainer name="page.wrapper">
        <container name="header.container" as="header_container" label="Page Header Container"  htmlTag="header" htmlClass="page-header" before="main.content"/>
        <container name="page.top" as="page_top" label="After Page Header" after="header.container"/>
        <container name="footer-container" as="footer" after="-" label="Page Footer Container" htmlTag="footer" htmlClass="page-footer" />
    </referenceContainer>




    <referenceContainer name="main">
        <container name="charactershopmain-outer" htmlTag="div" htmlClass="charactershopmain">
            <block class="Magento\Framework\View\Element\Template" name="charactershopmain" before="-" template="Magento_Cms::/happybeds/character-rooms.phtml" />
        </container>

    </referenceContainer>

    <referenceBlock name="breadcrumbs" remove="true"/>

    <referenceContainer name="catalog.leftnav" remove="true"/>
    <referenceContainer name="page.main.title" remove="true" />
    <move element="content" destination="charactershopmain-outer" after="ev.cms.page.character.rooms"/>
    <move element="page.wrapper" destination="ev-fullwidth-container" before="-"/>
</layout>
