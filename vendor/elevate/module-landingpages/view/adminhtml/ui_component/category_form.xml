                            <actions>
                                <action name="0">
                                    <target>category_form.category_form.landingpage.ev_landingpages_top_desc_ajax</target>
                                    <callback>show</callback>
                                </action>  
                            </actions>                            
                        </rule>
                        <rule name="3">
                            <value>onload_no_ajax_ajax</value>
                            <actions>
                                <action name="0">
                                    <target>category_form.category_form.landingpage.ev_landingpages_top_desc_ajax</target>
                                    <callback>show</callback>
                                </action>  
                            </actions>                            
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Elevate\LandingPages\Model\Config\Source\AjaxDescriptionType"/>
                    </settings>
                </select>
            </formElements>
        </field>           
        
