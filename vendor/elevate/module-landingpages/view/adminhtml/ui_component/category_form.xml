            </settings>
            <formElements>
                <wysiwyg class="Magento\Catalog\Ui\Component\Category\Form\Element\Wysiwyg">
                    <settings>
                        <rows>4</rows>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>                  
                   
    <field name="ev_landingpages_top_desc_type" formElement="select" sortOrder="70">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Top Description Behaviour</label>
                <dataScope>ev_landingpages_top_desc_type</dataScope>
                <tooltip>
                    <description translate="true">Choose the behaviour of the ajax description</description>
                </tooltip>
                 <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>onload_default_ajax_no</value>
                            <actions>
                                <action name="0">
                                    <target>category_form.category_form.landingpage.ev_landingpages_top_desc_ajax</target>
                                    <callback>hide</callback>
                                </action>  
                            </actions>                             
                        </rule>
                        <rule name="1">
                            <value>onload_default_ajax_default</value>
                            <actions>
                                <action name="0">
                                    <target>category_form.category_form.landingpage.ev_landingpages_top_desc_ajax</target>
                                    <callback>hide</callback>
                                </action>  </actions>                             
                        </rule>
                        <rule name="2">
