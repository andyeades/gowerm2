<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\App\RouterList">
        <arguments>
            <argument name="routerList" xsi:type="array">
                <item name="elevatelandingpagerouter" xsi:type="array">
                    <item name="class" xsi:type="string">Elevate\LandingPages\Controller\Router</item>
                    <item name="disable" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="string">31</item>
                </item>
            </argument>
        </arguments>
    </type>
    <virtualType name="Elevate\LandingPages\Block\Navigation\Category"
                 type="Elevate\LandingPages\Block\Navigation">
        <arguments>
            <argument name="filterList" xsi:type="object">categoryFilterList</argument>
        </arguments>
    </virtualType>


    <virtualType name="Elevate\LandingPages\Block\Navigation\Search"
                 type="Elevate\LandingPages\Block\Navigation">
        <arguments>
            <argument name="filterList" xsi:type="object">searchFilterList</argument>
        </arguments>
    </virtualType>

    <preference for="Magento\LayeredNavigation\Block\Navigation\Category" type="Elevate\LandingPages\Block\Navigation\Category" />
    <preference for="Magento\LayeredNavigation\Block\Navigation\Search" type="Elevate\LandingPages\Block\Navigation\Search" />

    <type name="Magento\Catalog\Controller\Category\View">
        <plugin name="Elevate_LandingPages_Ajax_Category_View"
                type="Elevate\LandingPages\Plugin\Category\View"  sortOrder="1"></plugin>
    </type>

    <type name="Elevate\LandingPages\Controller\Index\Index">
        <plugin name="Elevate_LandingPages_Ajax_Category_View"
                type="Elevate\LandingPages\Plugin\Category\View" sortOrder="1"></plugin>
    </type>

    <preference for="Magento\LayeredNavigation\Block\Navigation\State"
                type="Elevate\LandingPages\Block\Navigation\State"/>





</config>