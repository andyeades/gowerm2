<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root" label="Root">
        <block class="Elevate\ProductIcons\Block\Adminhtml\Product\Edit\Tab\Icon" name="catalog.product.edit.tab.icon"/>
        <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="icon_grid_serializer">
            <arguments>
                <argument name="input_names" xsi:type="string">position</argument>
                <argument name="grid_block" xsi:type="string">catalog.product.edit.tab.icon</argument>
                <argument name="callback" xsi:type="string">getSelectedProductIcons</argument>
                <argument name="input_element_name" xsi:type="string">links[producticons]</argument>
                <argument name="reload_param_name" xsi:type="string">products_icon</argument>
            </arguments>
        </block>
    </container>
</layout>
