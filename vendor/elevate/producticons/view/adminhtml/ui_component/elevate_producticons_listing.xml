<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">elevate_producticons_listing.elevate_producticons_listing_data_source</item>
        </item>
    </argument>
        <settings>
            <buttons>
                <button name="add">
                    <url path="*/*/new"/>
                    <class>primary</class>
                    <label translate="true">Add New Item</label>
                </button>
            </buttons>
            <spinner>elevate_producticons_columns</spinner>
            <deps>
                <dep>elevate_producticons_listing.elevate_producticons_listing_data_source</dep>
            </deps>
        </settings>
    <dataSource name="elevate_producticons_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">icon_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Elevate_ProductIcons::index</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="elevate_producticons_listing_data_source">
            <settings>
                <requestFieldName>icon_id</requestFieldName>
                <primaryFieldName>icon_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>


    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <massaction name="listing_massaction">
            <action name="edit">
                <settings>
                    <callback>
                        <target>editSelected</target>
                        <provider>elevate_producticons_listing.elevate_producticons_listing.elevate_producticons_columns_editor</provider>
                    </callback>
                    <type>edit</type>
                    <label translate="true">Edit</label>
                </settings>
            </action>
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="producticons/index/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="enable">
                <settings>
                    <url path="producticons/index/massEnable"/>
                    <type>enable</type>
                    <label translate="true">Enable</label>
                </settings>
            </action>
            <action name="disable">
                <settings>
                    <url path="producticons/index/massDisable"/>
                    <type>disable</type>
                    <label translate="true">Disable</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <exportButton name="export_button"/>
        <filters name="listing_filters" />
    </listingToolbar>

    <columns name="elevate_producticons_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>icon_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column name="icon_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="icon_title">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Title/Alt</label>
            </settings>
        </column>
        <column name="icon_url" class="Elevate\ProductIcons\Ui\Component\Listing\Column\Image">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Product Icon</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/thumbnail</item>
                    <item name="altField" xsi:type="string">Icon Image</item>
                    <item name="has_preview" xsi:type="string">1</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>
        <column name="icon_start_date" class="Magento\Ui\Component\Listing\Columns\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">Start Date</item>
                </item>

            </argument>
            <settings>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="icon_end_date" class="Magento\Ui\Component\Listing\Columns\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">End Date</item>
                </item>

            </argument>
            <settings>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <actionsColumn name="actions" class="Elevate\ProductIcons\Ui\Component\Listing\Column\ProducticonsActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="viewUrlPath" xsi:type="string">producticons/index/edit</item>
                    <item name="urlEntityParamName" xsi:type="string">icon_id</item>
                </item>
            </argument>
            <settings>
                <indexField>icon_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>