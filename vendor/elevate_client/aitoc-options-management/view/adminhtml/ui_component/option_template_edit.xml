<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">option_template_edit.optionsmanagement_template_data_source</item>
            <item name="namespace" xsi:type="string">option_template_edit</item>
            <item name="deps" xsi:type="string">option_template_edit.optionsmanagement_template_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Rule Settings</item>
        <item name="config" xsi:type="array">
            <!--<item name="dataScope" xsi:type="string">data</item>-->
            <item name="namespace" xsi:type="string">option_template_edit</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="childrenFromMeta" xsi:type="boolean">true</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="class" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="url" xsi:type="string">*/*/</item>
            </item>
            <item name="save" xsi:type="string">Aitoc\OptionsManagement\Block\Adminhtml\Template\Edit\Button\Save</item>
        </item>
    </argument>

    <dataSource name="optionsmanagement_template_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Aitoc\OptionsManagement\Ui\DataProvider\Template\Form\DataProvider</argument>
            <argument name="name" xsi:type="string">optionsmanagement_template_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">template_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="optionsmanagement/template/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="assign_products">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Products</item>
                <item name="sortOrder" xsi:type="string">40</item>
            </item>
        </argument>
        <container name="assign_products_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">160</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <argument name="block" xsi:type="object">Aitoc\OptionsManagement\Block\Adminhtml\Template\Edit\AssignProducts</argument>
            </htmlContent>
        </container>
    </fieldset>
</form>
