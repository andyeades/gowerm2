<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Aitoc\OptionsManagement\Ui\DataProvider\Template\Form\Modifier\Pool" type="Magento\Ui\DataProvider\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="websites" xsi:type="array">
                    <item name="class" xsi:type="string">Aitoc\OptionsManagement\Ui\DataProvider\Template\Form\Modifier\General</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
                <item name="custom-options" xsi:type="array">
                    <item name="class" xsi:type="string">Aitoc\OptionsManagement\Ui\DataProvider\Template\Form\Modifier\CustomOptions</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Aitoc\OptionsManagement\Ui\DataProvider\Template\Form\DataProvider">
        <arguments>
            <argument name="pool" xsi:type="object">Aitoc\OptionsManagement\Ui\DataProvider\Template\Form\Modifier\Pool</argument>
        </arguments>
    </type>

    <type name="Magento\Catalog\Model\Product\Option\Value">
        <plugin name="save_template_option_type_id_after_save_option_value" type="Aitoc\OptionsManagement\Plugin\Catalog\Model\Product\Option\Value"/>
    </type>

    <type name="Magento\Catalog\Model\ResourceModel\Product\Option\Value\Collection">
        <plugin name="load_option_value_collection_with_template_info" type="Aitoc\OptionsManagement\Plugin\Catalog\Model\ResourceModel\Product\Option\Value\Collection"/>
    </type>

    <type name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\CustomOptions">
        <plugin name="add_template_info_to_product_custom_options" type="Aitoc\OptionsManagement\Plugin\Catalog\Ui\DataProvider\Product\Form\Modifier\CustomOptions"/>
    </type>

    <type name="Magento\Catalog\Controller\Adminhtml\Product\Initialization\Helper">
        <plugin name="process_option_store_data" type="Aitoc\OptionsManagement\Plugin\Catalog\Controller\Adminhtml\Product\Initialization\Helper"/>
    </type>

    <type name="Magento\Framework\EntityManager\Operation\Update\UpdateMain">
        <plugin name="product_update_main_data" type="Aitoc\OptionsManagement\Plugin\Framework\EntityManager\Operation\Update\UpdateMain"/>
    </type>

    <type name="Magento\Catalog\Ui\DataProvider\Product\ProductCustomOptionsDataProvider">
        <plugin name="before_get_data" type="Aitoc\OptionsManagement\Plugin\Catalog\Ui\DataProvider\Product\ProductCustomOptionsDataProvider"/>
    </type>

</config>
