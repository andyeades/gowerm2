<?xml version="1.0"?>
<payment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Payment:etc/payment.xsd">
    <groups>
        <group id="secure_trading_group">
            <label>Secure Trading</label>
        </group>
        <group id="api_secure_trading_group">
            <label>Api Secure Trading</label>
        </group>
    </groups>
    <methods>
        <method name="secure_trading">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
        <method name="api_secure_trading">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
    </methods>
</payment> 