				<filter>text</filter>
				<label translate="true">microsite_description</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="microsite_contact_name">
			<settings>
				<filter>text</filter>
				<label translate="true">microsite_contact_name</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="microsite_contact_number">
