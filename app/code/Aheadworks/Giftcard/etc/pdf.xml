<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Sales:etc/pdf_file.xsd">
    <totals>
        <total name="aw_giftcard">
            <title translate="true">Gift Cards</title>
            <source_field>aw_giftcard_amount</source_field>
            <amount_prefix>-</amount_prefix>
            <font_size>7</font_size>
            <display_zero>false</display_zero>
            <sort_order>600</sort_order>
        </total>
    </totals>
    <renderers>
        <page type="invoice">
            <renderer product_type="aw_giftcard">Aheadworks\Giftcard\Model\Sales\Order\Pdf\Items\Invoice</renderer>
        </page>
        <page type="shipment">
            <renderer product_type="aw_giftcard">Aheadworks\Giftcard\Model\Sales\Order\Pdf\Items\Shipment</renderer>
        </page>
        <page type="creditmemo">
            <renderer product_type="aw_giftcard">Aheadworks\Giftcard\Model\Sales\Order\Pdf\Items\Creditmemo</renderer>
        </page>
    </renderers>
</config>
