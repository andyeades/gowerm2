<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Aheadworks_Giftcard::css/style.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <container name="checkout.multishipping.aw.giftcard.container"
                       htmlTag="div"
                       htmlClass="aw-giftcart__multishipping-container">
                <block class="Aheadworks\Giftcard\Block\Checkout\Cart\Giftcard"
                       name="checkout.multishipping.aw.giftcard"
                       after="checkout_billing"
                       template="Aheadworks_Giftcard::checkout/cart/giftcard.phtml"
                       cacheable="false">
                    <arguments>
                        <argument name="is_form_opened" xsi:type="boolean">true</argument>
                        <argument name="redirect_to" xsi:type="string">multishipping</argument>
                    </arguments>
                    <block class="Aheadworks\Giftcard\Block\Customer\Giftcard\Codes" name="aw_giftcard_codes" as="giftcard_codes">
                        <arguments>
                            <argument name="redirect_to" xsi:type="string">multishipping</argument>
                        </arguments>
                    </block>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
